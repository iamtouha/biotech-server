{
  "kind": "collectionType",
  "collectionName": "invoices",
  "info": {
    "name": "invoice",
    "description": "Orders and invoices"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "index": {
      "type": "integer",
      "min": 0,
      "unique": true
    },
    "officer": {
      "model": "employee"
    },
    "items": {
      "collection": "invoice-item",
      "via": "invoice"
    },
    "confirmed": {
      "type": "boolean",
      "default": false
    },
    "cash_total": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "credit_total": {
      "default": 0,
      "min": 0,
      "type": "decimal"
    },
    "confirm_date": {
      "type": "date"
    },
    "dealer": {
      "model": "dealer",
      "via": "invoices"
    }
  }
}
